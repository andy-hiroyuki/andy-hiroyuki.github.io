doctype html
html lang="ja" prefix="og: http://ogp.me/ns# fb: http://www.facebook.com/2008/fbml"
  head
    meta charset="utf-8"

    title == "#{data.page.title} - Andy Hiroyuki"

    meta name="description" content="#{data.page.description}"
    meta name="robots" content="index,follow"
